<div class="container py-3">
<h1><%= @task.title %></h1>
<p><%= @task.details  %></p>
<p><%= check_box_tag 'completed', @task.id, @task.completed %> </p>
<% if @task.completed == true %>
   <p>This task has been completed</p>
   <% else %>
   <p>This task has not been completed</p>
<% end %>

<%= link_to "Back to list", tasks_path %> <br/>


<%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Edit", edit_path(@task.id)%>
</div>
