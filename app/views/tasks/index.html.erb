<div class="container py-3">
<h1>My Tasks</h1>
<% @tasks.each do |task| %>
<%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Delete task.title?"} %>
<%= link_to "Edit", edit_path(task.id)%>
<%= check_box_tag 'completed', task.id, task.completed %>
<%= link_to task.title, task_path(task.id) %> <br/>
<% end %>


<div>  <br/>
<%= link_to "Add a new task", new_path %> <br/>
</div>

</div>







